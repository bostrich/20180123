<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syezon.note_xh.fragment.SortFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:clipChildren="false"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_width="match_parent"
            android:layout_height="352dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/tv_today"
                android:textColor="@color/note_time"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Today"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_below="@id/tv_today"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="2 月 8 日 星期四"
                android:textSize="14sp"
                android:textColor="@color/note_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />





        </RelativeLayout>

    </LinearLayout>
    
    <ImageView
        android:id="@+id/img_add"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:src="@mipmap/img_add"
        android:layout_width="45dp"
        android:layout_height="45dp" />


</RelativeLayout>